<!DOCTYPE html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>تسليم المساعدات</title>

    <!-- خط جميل وراقي -->
    <!-- <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Tajawal:wght@400;500;700;800&display=swap"> -->

    <style>
        :root {
            --bg-gradient: linear-gradient(180deg, #eef6ff 0%, #f9fafb 40%, #fefefe 100%);
            --card: #ffffff;
            --card-soft: #f8fafc;
            --text: #0f172a;
            --muted: #6b7280;
            --primary: #0ea5e9;
            --primary-600: #0284c7;
            --accent: #fbbf24;
            --success: #16a34a;
            --danger: #dc2626;
            --border: #e2e8f0;
            --radius-lg: 24px;
            --radius-md: 18px;
            --shadow-main: 0 18px 45px rgba(15, 23, 42, .10);
            --shadow-soft: 0 10px 25px rgba(148, 163, 184, .25);
        }

        @font-face {
            font-family: 'Tajawal';
            src: url('/fonts/Tajawal-Regular.woff2') format('woff2');
            font-weight: 400;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: 'Tajawal';
            src: url('/fonts/Tajawal-Bold.woff2') format('woff2');
            font-weight: 700;
            font-style: normal;
            font-display: swap;
        }


        /* نثبّت الستايل Light حتى لو النظام Dark */
        @media (prefers-color-scheme: dark) {
            :root {
                --bg-gradient: linear-gradient(180deg, #eef6ff 0%, #f9fafb 40%, #fefefe 100%);
            }
        }

        * {
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
        }

        body {
            margin: 0;
            font-family: 'Tajawal', system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
            background: var(--bg-gradient);
            color: var(--text);
            -webkit-font-smoothing: antialiased;
            text-rendering: optimizeLegibility;
            font-size: clamp(14px, 1.9vw, 16px);
        }

        .wrap {
            max-width: 960px;
            margin: 0 auto;
            padding: clamp(14px, 4vw, 28px);
        }

        /* الهيدر الفاخر */
        .page-header {
            margin-bottom: 18px;
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            align-items: center;
            justify-content: space-between;
        }

        .title-block {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .title-icon {
            width: 42px;
            height: 42px;
            border-radius: 999px;
            background: radial-gradient(circle at 30% 0%, #e0f2fe, #0284c7);
            box-shadow: var(--shadow-soft);
            display: flex;
            align-items: center;
            justify-content: center;
            color: #f9fafb;
            font-weight: 800;
            font-size: 1.2rem;
        }

        .page-title {
            margin: 0;
            font-size: clamp(1.4rem, 3.2vw, 1.8rem);
            font-weight: 800;
            letter-spacing: .2px;
        }

        .page-subtitle {
            margin: 2px 0 0;
            color: var(--muted);
            font-size: .9rem;
        }

        .page-badge {
            padding: 6px 14px;
            border-radius: 999px;
            background: rgba(14, 165, 233, .08);
            color: var(--primary-600);
            border: 1px solid rgba(14, 165, 233, .25);
            font-size: .85rem;
            font-weight: 600;
            white-space: nowrap;
        }

        /* الكارت الرئيسي */
        .card {
            background: var(--card);
            border-radius: var(--radius-lg);
            border: 1px solid rgba(226, 232, 240, 0.9);
            box-shadow: var(--shadow-main);
            overflow: hidden;
        }

        /* شريط البحث */
        .bar {
            padding: 14px 16px 10px;
            border-bottom: 1px solid var(--border);
            background: linear-gradient(120deg, #e0f2fe 0%, #f9fafb 35%, #ffffff 100%);
        }

        .search-form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .search-row {
            display: flex;
            gap: 10px;
        }

        @media (max-width: 560px) {
            .search-row {
                flex-direction: column;
            }
        }

        .input {
            width: 100%;
            border-radius: 999px;
            border: 1px solid var(--border);
            padding: 12px 16px;
            font-size: .95rem;
            background: rgba(255, 255, 255, .9);
            color: var(--text);
            outline: none;
            transition: .15s ease;
        }

        .input::placeholder {
            color: var(--muted);
        }

        .input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(56, 189, 248, .25);
            background: #ffffff;
        }

        .btn {
            appearance: none;
            -webkit-appearance: none;
            border: 0;
            border-radius: 999px;
            padding: 12px 20px;
            font-weight: 800;
            cursor: pointer;
            transition: .15s ease;
            white-space: nowrap;
            font-size: .95rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, #0ea5e9, #0369a1);
            color: #ffffff;
            box-shadow: 0 12px 25px rgba(37, 99, 235, .35);
        }

        .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 16px 30px rgba(37, 99, 235, .45);
        }

        .btn-primary:active {
            transform: translateY(0);
            box-shadow: 0 8px 18px rgba(37, 99, 235, .3);
        }

        /* شريط الحالة */
        .status-strip {
            padding: 10px 16px;
            border-bottom: 1px solid var(--border);
            background: #f9fafb;
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            align-items: center;
            justify-content: space-between;
        }

        .status-pill {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            border-radius: 999px;
            padding: 8px 14px;
            font-size: .9rem;
            font-weight: 700;
        }

        .status-pill.ok {
            background: rgba(22, 163, 74, .08);
            color: var(--success);
            border: 1px solid #bbf7d0;
        }

        .status-pill.no {
            background: rgba(220, 38, 38, .06);
            color: var(--danger);
            border: 1px solid #fecaca;
        }

        .status-dot {
            width: 9px;
            height: 9px;
            border-radius: 999px;
            background: currentColor;
        }

        .status-meta {
            font-size: .8rem;
            color: var(--muted);
        }

        /* السيريال بعد التأكيد */
        .serial-wrapper {
            padding: 14px 16px 10px;
            text-align: center;
            background: radial-gradient(circle at top, #fef9c3, #f97316);
        }

        .serial-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 10px 26px;
            border-radius: 999px;
            background: rgba(255, 255, 255, .9);
            color: #111827;
            font-weight: 800;
            font-size: clamp(1.8rem, 6vw, 2.6rem);
            letter-spacing: 4px;
            box-shadow: 0 16px 35px rgba(124, 45, 18, .30);
        }

        /* شبكة المعلومات – كل 2 مستطيلات جنب بعض */
        .grid {
            padding: 14px 16px 6px;
            display: grid;
            gap: 12px;
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }

        /* على الشاشات الضيقة جدًا يرجع عنصر واحد */
        @media (max-width: 360px) {
            .grid {
                grid-template-columns: 1fr;
            }
        }

        .stat {
            background: var(--card-soft);
            border-radius: var(--radius-md);
            border: 1px solid var(--border);
            padding: 10px 12px;
            display: flex;
            flex-direction: column;
            gap: 4px;
            min-height: 70px;
        }

        .stat small {
            color: var(--muted);
            font-size: .78rem;
        }

        .stat strong {
            font-size: .96rem;
        }

        .stat-highlight {
            background: #ecfeff;
            border-color: #bae6fd;
        }

        .stat-success {
            background: #ecfdf3;
            border-color: #bbf7d0;
        }

        .stat-danger {
            background: #fef2f2;
            border-color: #fecaca;
        }

        .tag-line {
            font-size: .75rem;
            color: #92400e;
            margin-top: 2px;
        }

        .tag-center {
            font-size: .75rem;
            color: #0369a1;
        }

        /* نموذج تأكيد الاستلام */
        .receive {
            padding: 10px 16px 14px;
            border-top: 1px solid var(--border);
            background: #f8fafc;
            display: grid;
            gap: 10px;
        }

        @media (min-width: 580px) {
            .receive {
                grid-template-columns: 1fr auto;
                align-items: center;
            }
        }

        .note {
            margin: 0 16px 12px;
            color: var(--muted);
            font-size: .88rem;
        }

        .btn-confirm {
            border-radius: 999px;
            padding: 11px 20px;
            font-weight: 800;
            border: 0;
            cursor: pointer;
            background: linear-gradient(135deg, #22c55e, #16a34a);
            color: #ffffff;
            box-shadow: 0 12px 28px rgba(22, 163, 74, .40);
            white-space: nowrap;
        }

        .btn-confirm:hover {
            transform: translateY(-1px);
            box-shadow: 0 16px 32px rgba(22, 163, 74, .50);
        }

        .btn-confirm:active {
            transform: translateY(0);
            box-shadow: 0 10px 24px rgba(22, 163, 74, .35);
        }

        /* رسالة "غير مستفيد" */
        .empty-strip {
            padding: 14px 16px 16px;
            background: #fef2f2;
            border-top: 1px solid #fecaca;
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .empty-icon {
            width: 34px;
            height: 34px;
            border-radius: 999px;
            background: #fee2e2;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #b91c1c;
            font-weight: 800;
        }

        .empty-text {
            font-size: .92rem;
            color: #991b1b;
        }

        /* موبيل */
        @media (max-width: 480px) {
            .page-header {
                gap: 10px;
            }

            .page-badge {
                width: 100%;
                text-align: center;
            }

            .title-icon {
                width: 36px;
                height: 36px;
                font-size: 1rem;
            }
        }
    </style>
</head>

<body>
    <main class="wrap">
        <!-- هيدر الصفحة -->
        <!-- <header class="page-header">
            <div class="title-block">
                <div class="title-icon">ت</div>
                <div>
                    <h1 class="page-title">نظام تسليم المساعدات</h1>
                    <p class="page-subtitle">واجهة خفيفة، فخمة، وواضحة على كل الأجهزة (خاصة الجوال).</p>
                </div>
            </div>
            <div class="page-badge">وحدة التوزيع الميداني</div>
        </header> -->

        <!-- الكارت الرئيسي -->
        <section class="card" role="region" aria-label="بحث وتفاصيل التسليم">

            <!-- شريط البحث -->
            <div class="bar">
                <form class="search-form"
                    action="<%= (user==='A')?'/api/search/a':(user==='B')?'/api/search/b':'/api/search' %>"
                    method="post" autocomplete="off">
                    <div class="search-row">
                        <input style="font-size: 1.5rem;text-align: center;font-family:Tajawal" id="search" name="hof_id" class="input" type="tel"
                            placeholder="هوية رب الأسرة هنا" required inputmode="numeric" pattern="[0-9]*"
                            <%=(result===null||rowsCount==0)? 'autofocus' : '' %> />
                        <button class="btn btn-primary" type="submit">بحث</button>
                    </div>
                </form>
            </div>

            <!-- بعد التأكيد -->
            <% if (afterConfirmation) { %>
                <div class="status-strip">
                    <div class="status-pill ok">
                        <span class="status-dot"></span>
                        <span>
                            <%=hof_fullname%> استلم بنجاح
                        </span>
                    </div>
                    <div class="status-meta">
                        تم تسجيل عملية التسليم وحفظها في النظام.
                    </div>
                </div>
                <div class="serial-wrapper">
                    <span class="serial-badge">
                        <%=serial%>
                    </span>
                </div>
                <% } %>

                    <!-- في حال وجد نتائج -->
                    <% if (result && rowsCount> 0) { %>
                        <!-- حالة المستفيد -->
                        <div class="status-strip">
                            <div id="statusBadge" class="status-pill <%= result[0].IsReceived == 0 ? 'ok' : 'no' %>">
                                <span class="status-dot"></span>
                                <span>
                                    <%= result[0].IsReceived !=0 ? 'مستلم سابقاً' : 'لم يستلم حتى الآن' %>
                                </span>
                            </div>
                            <!-- <div class="status-meta">
                        مركز التوزيع: <strong><%= result[0].Center_Name %></strong>
                    </div> -->
                        </div>

                        <!-- بيانات الأسرة والمستفيدين -->
                        <div class="grid">
                            <div class="stat stat-highlight">
                                <small>هوية رب الأسرة</small>
                                <strong id="hofId">
                                    <%= result[0].HOF_ID %>
                                </strong>
                                <span class="tag-center">
                                    <%= result[0].Center_Name %>
                                </span>
                            </div>

                            <div class="stat">
                                <small>اسم رب الأسرة</small>
                                <strong id="hofName">
                                    <%= result[0].HOF_FullName %>
                                </strong>
                            </div>

                            <% if (result[0].IsReceived !=0) { %>
                                <div class="stat stat-danger">
                                    <small>اسم المستلم</small>
                                    <strong>
                                        <%= result[0].RecieverName %>
                                    </strong>
                                </div>
                                <div class="stat stat-danger">
                                    <small>وقت ومصدر الاستلام</small>
                                    <strong>
                                        <%= result[0].DeliveryTime %>
                                    </strong>
                                    <span class="tag-line">
                                        <%= result[0].DeviceName %>
                                    </span>
                                </div>
                                <% } %>

                                    <% result.forEach(data=> { %>
                                        <div class="stat <%= data.IsReceived==1 ? 'stat-danger' : 'stat-success' %>">
                                            <small>المستفيد الحالي</small>
                                            <strong id="beneficiary">
                                                <%= data.Member_FullName %>
                                            </strong>
                                            <span class="tag-line">
                                                <%= data.DistName %>
                                            </span>
                                        </div>
                                        <div class="stat <%= data.IsReceived==1 ? 'stat-danger' : 'stat-success' %>">
                                            <small>الكمية المخصصة</small>
                                            <strong style="font-size:2.5rem;">
                                                <%= data.Quantity %>
                                            </strong>
                                        </div>
                                        <% }) %>
                        </div>

                        <!-- نموذج تأكيد الاستلام (إذا يوجد تسليم متاح) -->
                        <% if (hasDelivery) { %>
                            <form class="receive" id="receiveForm" action="/api/confirm" method="post">
                                <input type="hidden" name="hof_id" value="<%= result[0].HOF_ID %>" />
                                <input type="hidden" name="HOF_FullName" value="<%= result[0].HOF_FullName %>" />
                                <input type="hidden" name="user" value="<%= user %>" />
                                <input type="hidden" name="serial" value="<%= result[0].Serial  %>" />

                                <input class="input" id="receiver_name" name="receiver_name" lang="ar" dir="rtl"
                                    placeholder="اكتب اسم المستلم كما في الهوية أو الكشوف…" autofocus required />

                                <button class="btn-confirm" id="submitReceive" type="submit">
                                    تأكيد استلام المساعدة
                                </button>
                            </form>
                            <p class="note">
                                الرجاء التأكد من مطابقة اسم المستلم والبيانات قبل الضغط على
                                <strong>تأكيد استلام المساعدة</strong>.
                            </p>
                            <% } %>

                                <!-- لم يتم العثور على مستفيد -->
                                <% } else if (result && rowsCount==0) { %>
                                    <div class="empty-strip">
                                        <div class="empty-icon">!</div>
                                        <div class="empty-text">
                                            للأسف، رقم الهوية المدخل غير موجود ضمن قوائم المستفيدين لهذا الكشف.
                                            
                                        </div>
                                    </div>
                                    <% } %>
        </section>
    </main>

    <!-- سكربت التقاط اسم/موديل الجهاز وإرساله مع نموذج التأكيد -->
    <script>
        const DEVICE_MAP = {
            "SM-G991B": "Samsung Galaxy S21",
            "SM-G996B": "Samsung Galaxy S21+",
            "SM-G998B": "Samsung Galaxy S21 Ultra",
            "SM-A125F": "Samsung Galaxy A12",
            "SM-M236B": "Samsung Galaxy M23",
            "iPhone14,5": "iPhone 13",
            "iPhone14,2": "iPhone 13 Pro",
            "iPhone15,3": "iPhone 14 Pro Max",
        };

        function modelFromUA(ua) {
            const patterns = [
                /(SM-[A-Z0-9]+)/,
                /(Pixel\s?[0-9a-zA-Z\s]*)/,
                /(Redmi\s?[0-9A-Za-z\s\-+]*)/,
                /\bMi\s?[0-9A-Za-z\s\-+]*\b/,
                /\bM200[0-9A-Za-z\-]*\b/,
                /\bONEPLUS\s?[A-Z0-9\-]+\b/,
                /(iPhone[0-9,]+)/
            ];
            for (const re of patterns) {
                const m = ua.match(re);
                if (m && m[1]) return m[1].trim();
            }
            if (/iPhone/.test(ua)) return "iPhone";
            if (/iPad/.test(ua)) return "iPad";
            if (/Android/.test(ua)) return "Android";
            if (/Windows/.test(ua)) return "Windows PC";
            if (/Macintosh/.test(ua)) return "Mac";
            return "Unknown";
        }

        function prettyNameFromModel(model) {
            if (DEVICE_MAP[model]) return DEVICE_MAP[model];
            if (model.startsWith("SM-")) return "Samsung " + model;
            if (/^Pixel/i.test(model)) return model.replace(/\s+/g, " ").trim();
            if (/^Redmi/i.test(model)) return model.trim();
            if (/^Mi /i.test(model)) return model.trim();
            if (/^ONEPLUS/i.test(model)) return model.replace(/\s+/, " ").trim();
            return model;
        }

        async function detectDeviceName() {
            try {
                if (navigator.userAgentData && navigator.userAgentData.getHighEntropyValues) {
                    const he = await navigator.userAgentData.getHighEntropyValues(
                        ["model", "platform", "platformVersion", "uaFullVersion"]
                    );
                    if (he?.model) return prettyNameFromModel(he.model);
                }
            } catch (_) { }

            const ua = navigator.userAgent || "";
            const model = modelFromUA(ua);
            return prettyNameFromModel(model);
        }

        (async () => {
            const deviceName = await detectDeviceName();
            const form = document.querySelector('#receiveForm');
            if (form) {
                const hidden = document.createElement('input');
                hidden.type = 'hidden';
                hidden.name = 'DeviceName';
                hidden.value = deviceName;
                form.appendChild(hidden);
            }
        })();
    </script>
</body>

</html>