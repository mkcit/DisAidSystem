        * {
            box-sizing: border-box
        }

        html,
        body {
            height: 100%
        }

        body {
            margin: 0;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Noto Naskh Arabic UI", "Tajawal", Arial, sans-serif;
            background: var(--bg);
            color: var(--text);
            -webkit-font-smoothing: antialiased;
            text-rendering: optimizeLegibility;
            font-size: clamp(14px, 1.95vw, 16px);
        }

        .wrap {
            max-width: 840px;
            margin: 0 auto;
            padding: clamp(14px, 3vw, 28px);
        }

        .title {
            font-size: clamp(1.1rem, 3.4vw, 1.5rem);
            font-weight: 800;
            letter-spacing: .2px;
            margin: 6px 2px 14px;
        }

        .card {
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        /* Header actions */
        .bar {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 10px;
            padding: 12px;
            border-bottom: 1px solid var(--border);
            backdrop-filter: blur(6px);
        }

        @media (min-width:520px) {
            .bar {
                grid-template-columns: 1fr auto auto
            }
        }

        .input,
        .select {
            width: 100%;
            background: #fff0;
            color: var(--text);
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 12px 14px;
            outline: none;
            transition: .15s ease;
        }

        .input::placeholder {
            color: var(--muted)
        }

        .input:focus,
        .select:focus {
            box-shadow: var(--ring);
            border-color: var(--primary);
        }

        .btn {
            appearance: none;
            -webkit-appearance: none;
            border: 1px solid transparent;
            border-radius: 12px;
            padding: 12px 16px;
            font-weight: 700;
            cursor: pointer;
            transition: .15s ease;
            white-space: nowrap;
        }

        .btn.primary {
            background: var(--primary);
            color: #fff;
        }

        .btn.primary:hover {
            background: var(--primary-600);
        }

        .btn.ghost {
            background: transparent;
            border-color: var(--border);
            color: var(--text);
        }

        .btn.ghost:hover {
            border-color: var(--primary);
        }

        /* Details area */
        .grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            padding: 12px;
        }

        @media (min-width:640px) {
            .grid {
                grid-template-columns: repeat(4, 1fr);
            }
        }

        .stat {
            border: 1px solid var(--border);
            border-radius: 12px;
            padding: 10px 12px;
            min-height: 64px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 2px;
            background: linear-gradient(180deg, #ffffff0a, #00000005);
        }

        .stat small {
            color: var(--muted);
        }

        .badge {
            align-items: center;
            gap: 6px;
            padding: 6px 10px;
            border-radius: 999px;
            font-weight: 700;
            font-size: 1.5em;
            width: 100%;
            text-align: center;
        }

        .badge.ok {
            background: rgba(22, 163, 74, .12);
            color: var(--success);
        }

        .badge.no {
            background: rgba(220, 38, 38, .12);
            color: var(--danger);
        }

        .no{
            background: rgba(220, 38, 38, .12);
            color: var(--danger);
        }

        .ok {
            background: rgba(22, 163, 74, .12);
            color: var(--success);
        }

        /* Items table that becomes cards on mobile */
        .items {
            padding: 6px 12px 14px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            overflow: hidden;
            border-radius: 14px;
            border: 1px solid var(--border);
        }

        th,
        td {
            padding: 12px;
            border-bottom: 1px solid var(--border);
            text-align: right
        }

        th {
            background: linear-gradient(180deg, #f8fafc22, #0000);
            font-weight: 800;
        }

        tr:last-child td {
            border-bottom: 0
        }

        /* Mobile stack */
        @media (max-width:620px) {

            table,
            thead,
            tbody,
            th,
            td,
            tr {
                display: block;
            }

            thead {
                position: absolute;
                width: 1px;
                height: 1px;
                overflow: hidden;
                clip: rect(0, 0, 0, 0);
                white-space: nowrap;
            }

            tr {
                border: 1px solid var(--border);
                border-radius: 12px;
                padding: 10px;
                margin: 10px 0;
                background: var(--card);
            }

            td {
                border: 0;
                padding: 8px 0;
                display: grid;
                grid-template-columns: 120px 1fr;
                gap: 10px;
            }

            td::before {
                content: attr(data-label);
                color: var(--muted);
                font-weight: 600;
            }
        }

        .row-actions {
            display: flex;
            gap: 8px;
            align-items: center;
            flex-wrap: wrap;
        }

        /* Footer form */
        .receive {
            display: grid;
            gap: 10px;
            padding: 12px;
            border-top: 1px solid var(--border);
        }

        @media (min-width:560px) {
            .receive {
                grid-template-columns: 1fr auto;
                align-items: center;
            }
        }

        .note {
            color: var(--muted);
            font-size: .92em;
            padding: 0 12px 12px;
        }

        /* Safe focus ring for buttons too */
        .btn:focus-visible {
            box-shadow: var(--ring);
            outline: none
        }
    </style>
</head>

<body>
    <main class="wrap">
        <section class="card" role="region" aria-label="بحث وتصفية">
            <div class="bar">
                <form action="<%= (user==='A')?'/api/search/a':(user==='B')?'/api/search/b':'/api/search' %>"  method="post" autocomplete="off" >
                    <input id="search" name="hof_id" class="input" style="width: 75%;" type="tel" placeholder="ابحث بهوية رب الأسرة…" required
                        inputmode="numeric" pattern="[0-9]*" <%= (result===null||rowsCount==0)? 'autofocus' : '' %> />
                    <button class="btn ghost" style="background-color: var(--primary-600);" type="submit">بحث</button>
                </form>
            </div>

            <% if (afterConfirmation) { %>
                <div class="stat" style="border-radius: 0;font-size: 8pt;">
                    <span id="statusBadge" class="badge ok"><%=hof_fullname%> استلم بنجاح </span>
                </div>
                <div class="stat" style="border-radius: 0;">
                    <span id="statusBadge" class="badge ok"  style="width: 50%;margin: auto;font-size: 50pt;color:yellow"><%=serial%></span>
                </div>
            <% } %>

            <% if (result && rowsCount > 0) { %>
                <div class="stat">
                    <span id="statusBadge" class="badge <%= result[0].IsReceived == 0 ? ' ok' : ' no' %>">
                        <%= result[0].IsReceived != 0 ? 'مستلم سابقا' : 'لم يستلم' %>
                    </span>
                    
                </div>
               
                

                <div class="grid">
                    <% if (result[0].IsReceived != 0) { %>
                        <div class="stat no">
                            <small>المستلم</small>
                            <strong><%= result[0].RecieverName %></strong>
                        </div>
                        <div class="stat no">
                            <small>وقت الاستلام</small>
                            <strong><%= result[0].DeliveryTime %></strong>
                            <strong><%= result[0].DeviceName %></strong>
                        </div>
                    <% } %>
                    <div class="stat">
                        <small>هوية رب الأسرة</small>
                        <strong id="hofId"><%= result[0].HOF_ID %></strong>
                        <small style="font-size: 8pt;color: yellow;text-align: left;"><%= result[0].Center_Name %></small>
                    </div>
                    <div class="stat">
                        <small>اسم رب الأسرة</small>
                        <strong id="hofName"><%= result[0].HOF_FullName %></strong>
                    </div>
                    <% result.forEach(data => { %>
                        <div class="stat" <%- (data.IsReceived==1)?"style='background-color: #dc26266e;'":"style='background-color: #122a26;'" %> >
                            <small>المستفيد الحالي</small>
                            <strong id="beneficiary"  <%- (data.IsReceived==1)?"style='color: red;'":"style='color: #149144;'" %>><%= data.Member_FullName %></strong>
                        </div>
                        <div class="stat" <%- (data.IsReceived==1)?"style='background-color: #dc26266e;'":"style='background-color: #122a26;'" %>>
                            <small>الكمية</small>
                            <strong id="beneficiary"  <%- (data.IsReceived==1)?"style='color: red;font-size: 20pt;'":"style='color: #149144;font-size: 20pt;'" %> ><%= data.Quantity %></strong>

                            <!-- <small>كشف التسليم</small> -->
                            <small id="beneficiary" style="font-size: 8pt;color: yellow;text-align: left;"><%= data.DistName %></small>
                        </div>
                    <% }) %>
                </div> 
<!-- if  at least one isn't delivered -->
                <% if (hasDelivery) { %>
                    <form class="receive" id="receiveForm" action="/api/confirm" method="post" >
                        <input type="hidden" name="hof_id" value="<%= result[0].HOF_ID %>" />
                        <input type="hidden" name="HOF_FullName" value="<%= result[0].HOF_FullName %>" />
                        <input type="hidden" name="user" value="<%= user %>" />
                        <input type="hidden" name="serial" value="<%= result[0].Serial  %>" />
                        <input class="input" id="receiver_name" name="receiver_name" lang="ar" dir="rtl" placeholder="اكتب اسم المستلم هنا"  autofocus required />
                        <button class="btn primary" id="submitReceive" type="submit">تأكيد الاستلام</button>
                    </form>
                <% } %>
            <% } else if (result && rowsCount == 0) { %>
                <div class="stat" style="border-radius: 0;font-size: 8pt;">
                    <span id="statusBadge" class="badge no">للاسف هذا الشخص غير مستفيد</span>
                </div>
            <% } %>
        </section>
    </main>

    <!-- تحسين وصول مخفي -->
    <style>
        .visually-hidden {
            position: absolute !important;
            width: 1px;
            height: 1px;
            padding: 0;
            margin: -1px;
            overflow: hidden;
            clip: rect(0, 0, 0, 0);
            white-space: nowrap;
            border: 0;
        }
    </style>

    <!-- سكربت التقاط اسم/موديل الجهاز وإرساله مع نموذج التأكيد -->
    <script>
      const DEVICE_MAP = {
        "SM-G991B": "Samsung Galaxy S21",
        "SM-G996B": "Samsung Galaxy S21+",
        "SM-G998B": "Samsung Galaxy S21 Ultra",
        "SM-A125F": "Samsung Galaxy A12",
        "SM-M236B": "Samsung Galaxy M23",
        "iPhone14,5": "iPhone 13",
        "iPhone14,2": "iPhone 13 Pro",
        "iPhone15,3": "iPhone 14 Pro Max",
      };

      function modelFromUA(ua) {
        const patterns = [
          /(SM-[A-Z0-9]+)/,              // Samsung model codes
          /(Pixel\s?[0-9a-zA-Z\s]*)/,    // Google Pixel
          /(Redmi\s?[0-9A-Za-z\s\-+]*)/, // Xiaomi Redmi
          /\bMi\s?[0-9A-Za-z\s\-+]*\b/,  // Xiaomi Mi
          /\bM200[0-9A-Za-z\-]*\b/,      // بعض رموز شاومي
          /\bONEPLUS\s?[A-Z0-9\-]+\b/,   // OnePlus
          /(iPhone[0-9,]+)/              // iPhone code (أحيانًا)
        ];
        for (const re of patterns) {
          const m = ua.match(re);
          if (m && m[1]) return m[1].trim();
        }
        if (/iPhone/.test(ua)) return "iPhone";
        if (/iPad/.test(ua)) return "iPad";
        if (/Android/.test(ua)) return "Android";
        if (/Windows/.test(ua)) return "Windows PC";
        if (/Macintosh/.test(ua)) return "Mac";
        return "Unknown";
      }

      function prettyNameFromModel(model) {
        if (DEVICE_MAP[model]) return DEVICE_MAP[model];
        if (model.startsWith("SM-")) return "Samsung " + model;
        if (/^Pixel/i.test(model)) return model.replace(/\s+/g, " ").trim();
        if (/^Redmi/i.test(model)) return model.trim();
        if (/^Mi /i.test(model)) return model.trim();
        if (/^ONEPLUS/i.test(model)) return model.replace(/\s+/, " ").trim();
        return model;
      }

      async function detectDeviceName() {
        try {
          if (navigator.userAgentData && navigator.userAgentData.getHighEntropyValues) {
            const he = await navigator.userAgentData.getHighEntropyValues(["model","platform","platformVersion","uaFullVersion"]);
            if (he?.model) return prettyNameFromModel(he.model);
          }
        } catch (_) { /* ignore */ }

        const ua = navigator.userAgent || "";
        const model = modelFromUA(ua);
        return prettyNameFromModel(model);
      }

      (async () => {
        const deviceName = await detectDeviceName();
        const form = document.querySelector('#receiveForm');
        if (form) {
          const hidden = document.createElement('input');
          hidden.type = 'hidden';
          hidden.name = 'DeviceName';
          hidden.value = deviceName;
          form.appendChild(hidden);
        }

        // (اختياري) عرض الاسم للمستخدم للتأكد
        // const note = document.createElement('div');
        // note.className = 'note';
        // note.textContent = `الجهاز المكتشف: ${deviceName}`;
        // document.querySelector('.receive')?.appendChild(note);
      })();
    </script>
</body>
